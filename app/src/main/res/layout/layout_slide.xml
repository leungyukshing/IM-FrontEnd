<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_slide"
    android:orientation="vertical"
    android:background="#e9e9e9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/layout_slide_bg"
        android:background="@drawable/bgdr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#81707070"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:src="@drawable/avasterdr" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/username"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="Text"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingTop="10dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="Text"/>
            </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <com.example.im.view.PictureAndTextButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/dressup"
            app:text="Dress Up"
            app:textSize="8sp"
            app:picture="@drawable/dress"
            app:textColor="#000000">
        </com.example.im.view.PictureAndTextButton>
        <com.example.im.view.PictureAndTextButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/profile"
            app:text="Profile"
            app:textSize="8sp"
            app:picture="@drawable/profile"
            app:textColor="#000000"
            android:layout_marginTop="10dp">

        </com.example.im.view.PictureAndTextButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.example.im.view.PictureAndTextButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/setting"
            app:text="Setting"
            app:textSize="8sp"
            app:textColor="#000000"
            app:picture="@drawable/setting"
            android:paddingLeft="10dp"
            android:layout_weight="1">

        </com.example.im.view.PictureAndTextButton>

        <com.example.im.view.PictureAndTextButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/night"
            app:text="Night"
            app:textSize="8sp"
            app:textColor="#000000"
            app:picture="@drawable/night"
            android:paddingLeft="10dp"
            android:layout_weight="1">

        </com.example.im.view.PictureAndTextButton>
    </LinearLayout>

</LinearLayout>