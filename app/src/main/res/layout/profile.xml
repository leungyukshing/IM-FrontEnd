<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e9e9e9">

    <com.example.im.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/profile_titleBar"
        app:titleText="Profile"
        app:titleTextSize="12sp"
        app:titleTextColor="#ffffff"
        app:leftBackground="@drawable/returned">

    </com.example.im.view.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/profile_username"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#dcdcdc"
            android:hint="Your Name"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/profile_sign"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#dcdcdc"
            android:hint="Your sign"
            android:maxLines="2"
            android:paddingLeft="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/profile_password"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#dcdcdc"
            android:hint="Your Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/profile_repeat_password"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#dcdcdc"
            android:hint="Repeat Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_btn"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@color/colorBlue"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
</LinearLayout>